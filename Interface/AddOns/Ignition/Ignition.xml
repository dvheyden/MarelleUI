<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	<Script file="Ignition.lua" />
	
	<FontString name="IgnitionFont" font="Interface\AddOns\Ignition\fonts\Expressway.ttf" outline="NORMAL" virtual="true">
		<FontHeight>
			<AbsValue val="7"/>
		</FontHeight>
		<Color r="1.0" g="1.0" b="1.0"/>
	</FontString>
	
	<Frame name="IgnitionFrame" enableMouse="true" movable="true" hide="true">
		<Size>
			<AbsDimension x="100" y="30" />
		</Size>
		
		<Anchors>
			<Anchor point="BOTTOMRIGHT">
				<Offset>
					<AbsDimension x="-100" y="100"/>
				</Offset>
			</Anchor>
		</Anchors>
		
		<Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" tile="true">
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
			<Color r="0.121" g="0.121" b="0.121"/>
		</Backdrop>
		
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentText1" inherits="IgnitionFont" justifyH="LEFT">
					<Anchors>
						<Anchor point="TOPLEFT"> 
							<Offset>
								<AbsDimension x="7" y="-7"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				
				<FontString name="$parentText2" inherits="IgnitionFont" justifyH="LEFT">
					<Anchors>
						<Anchor point="BOTTOMLEFT"> 
							<Offset>
								<AbsDimension x="7" y="7"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		
		<Scripts>
			<OnLoad>
				Ignition_Onload();
			</OnLoad>
			<OnMouseDown>
				Ignition_StartDragging();
			</OnMouseDown>
			<OnMouseUp>
				Ignition_StopDragging();
			</OnMouseUp>
			<OnHide>
				Ignition_StopDragging();
			</OnHide>
			<OnEvent>
				Ignition_OnEvent();
			</OnEvent>
		</Scripts>
	</Frame>
</Ui>